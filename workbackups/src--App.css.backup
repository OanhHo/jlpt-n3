/* ============================
   GLOBAL STYLES & RESET
   ============================ */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  width: 100%;
  overflow-x: hidden;
}

#root {
  --primary: #6b5bff;
  --primary-600: #5a47e6;
  --muted: #6b7280;
  --bg: #f7f9fc;
  --card: #ffffff;
  --radius: 12px;

  font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  line-height: 1.6;
  color: #333;
  width: 100%;
  min-height: 100vh;
}

.container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Global improvements: cleaner background, unified card style */
body {
  background: var(--bg);
  color: #172233;
}

.card {
  background: var(--card);
  border-radius: var(--radius);
  box-shadow: 0 8px 24px rgba(20,20,50,0.06);
  padding: 18px;
}

.muted {
  color: var(--muted);
}

@media (max-width: 768px) {
  .container {
    padding: 0 10px;
  }
}

